# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# Settings for Go files
[*.go]
indent_style = tab
indent_size = 4

# Settings for Kubernetes manifests (YAML)
[*.yaml, *.yml]
indent_style = space
indent_size = 2

# Settings for Shell scripts (Bash, Shell)
[*.sh, *.bash]
indent_style = space
indent_size = 2

# Settings for JSON files
[*.json]
indent_style = space
indent_size = 2

# Settings for Makefile
[Makefile]
indent_style = tab
indent_size = 2
